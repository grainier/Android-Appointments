<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" >

    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/cpvCalendar"
        android:layout_width="match_parent"
        android:layout_height="450dip"
        android:layout_weight="1"
      	android:paddingLeft="16dp"
      	android:paddingRight="16dp"
      	android:paddingBottom="16dp"
        android:scrollbarStyle="outsideOverlay"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFF" />

    <LinearLayout
        android:id="@+id/menuWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/btnMenuCreate"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/create" />

        <ImageButton
            android:id="@+id/btnMenuView"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/edit" />

        <ImageButton
            android:id="@+id/btnMenuDelete"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/delete" />

        <ImageButton
            android:id="@+id/btnMenuMove"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/move" />

        <ImageButton
            android:id="@+id/btnMenuSearch"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/search" />

        <ImageButton
            android:id="@+id/btnMenuTranstale"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/translate" />

    </LinearLayout>

</LinearLayout>