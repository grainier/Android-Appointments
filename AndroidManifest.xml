<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.grainier.appointments"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.grainier.appointments.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.grainier.appointments.AppointmentActivity"
            android:label="@string/title_activity_create_appointment" >
        </activity>
        <activity
            android:name="net.grainier.appointments.AppointmentsListActivity"
            android:label="@string/title_activity_appointments_list" >
        </activity>
        <activity
            android:name="net.grainier.appointments.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>